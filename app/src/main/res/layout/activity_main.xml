<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:gravity="center">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            app:columnCount="6"
            app:rowCount="2">

            <ImageButton
                android:id="@+id/bassButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:scaleType="fitCenter"
                app:layout_column="2"
                app:layout_columnSpan="2"
                app:layout_row="1"
                app:srcCompat="@drawable/bass" />

            <ImageButton
                android:id="@+id/hihatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@drawable/hihat" />

            <ImageButton
                android:id="@+id/cym1Button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:scaleType="fitCenter"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="0"
                app:srcCompat="@drawable/cymbal1" />

            <ImageButton
                android:id="@+id/cym2Button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:scaleType="fitCenter"
                app:layout_row="0"
                app:srcCompat="@drawable/cymbal2" />

            <ImageButton
                android:id="@+id/tom3Button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:scaleType="fitCenter"
                app:layout_column="4"
                app:layout_row="1"
                app:srcCompat="@drawable/tom3" />

            <ImageButton
                android:id="@+id/snareButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:scaleType="fitCenter"
                app:layout_column="1"
                app:layout_row="1"
                app:srcCompat="@drawable/snare" />

            <ImageButton
                android:id="@+id/cym3Button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:scaleType="fitCenter"
                app:layout_column="5"
                app:layout_row="1"
                app:srcCompat="@drawable/cymbal3" />

            <ImageButton
                android:id="@+id/tom2Button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:scaleType="fitCenter"
                app:layout_column="3"
                app:layout_row="0"
                app:srcCompat="@drawable/tom2" />

            <ImageButton
                android:id="@+id/tom1Button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:scaleType="fitCenter"
                app:layout_column="2"
                app:layout_row="0"
                app:srcCompat="@drawable/tom1" />
        </androidx.gridlayout.widget.GridLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>